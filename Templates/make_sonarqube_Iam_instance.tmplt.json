{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "This template sets up the IAM role needed by an Sonarqube instance",
  "Outputs": {
    "InstanceRole": {
      "Value": { "Ref" : "InstanceRole" },
      "Description" : "Name of the instance role"
    },
    "InstanceRoleProfile" : {
      "Value":  { "Ref" : "InstanceProfile" },
      "Description" : "Profile of the instance role"
    },
    "InstanceRoleArn" : {
      "Value": { "Fn::GetAtt" : [ "InstanceRole", "Arn" ] },
      "Description" : "ARN of the instance role"
    }
  },
  "Parameters": {
    "BackupBucketArn": {
      "Description": "S3 Bucket to host Jira backups",
      "Type": "String"
    },
    "ServiceTld": {
      "Default": "amazonaws.com",
      "Description": "TLD of the IAM service-trust.",
      "Type": "String"
    }
  },
  "Resources": {
    "InstancePolicy" : {
      "Type": "AWS::IAM::ManagedPolicy",
      "Properties": {
        "Description" : "Policy to provide instance-level access to needed AWS-level resources",
        "Path" : "/",
        "PolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "s3:*"
              ],
              "Resource": [
                {
                  "Fn::Join": [
                    "",
                    [
                      { "Ref" : "BackupBucketArn" },
                      ""
                    ]
                  ]
                },
                {
                  "Fn::Join": [
                    "",
                    [
                      { "Ref" : "BackupBucketArn" },
                      "/*"
                    ]
                  ]
                }
              ]
            },
            {
              "Effect": "Allow",
              "Action": [
                "cloudformation:DescribeStackResource"
              ],
              "Resource": [
                "*"
              ]
            }
          ]
        },
        "Roles": [{ "Ref" : "InstanceRole" }]
      }
    },
    "InstanceRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": "sts:AssumeRole",
              "Effect": "Allow",
              "Principal": {
                "Service": {
                  "Fn::Join": [
                    ".",
                    [
                      "ec2",
                      { "Ref": "ServiceTld" }
                    ]
                  ]
                }
              }
            }
          ]
        },
        "Path": "/"
      }
    },
    "InstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Path": "/",
        "Roles": [ { "Ref" : "InstanceRole" } ]
      }
    }
  }
}
